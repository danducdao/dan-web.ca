<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    


</head>
<body>
    <div class="ui menu">
        @{
            var controllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
        }
        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "item " + (controllerName.Equals("Home", StringComparison.InvariantCultureIgnoreCase) ? "active" : "") })
        @Html.ActionLink("Writer", "Index", "Writer", null, new { @class = "item " + (controllerName.Equals("Writer", StringComparison.InvariantCultureIgnoreCase) ? "active" : "") })
        @Html.ActionLink("Product", "Index", "Product", null, new { @class = "item " + (controllerName.Equals("Product", StringComparison.InvariantCultureIgnoreCase) ? "active" : "") })
        <div class="right menu">
            <div class="item">
                <div class="ui transparent icon input">
                    <input type="text" placeholder="Search...">
                    <i class="search link icon"></i>
                </div>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/semantic")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/writer")
    @RenderSection("scripts", required: false)
</body>
</html>
